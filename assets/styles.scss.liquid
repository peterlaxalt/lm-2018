//// +-nav

$lmnt-top-nav-height:50px;
$lmnt-top-nav-padding:$base/4;


@keyframes lmnt-nav-bar-in {
	0% {
		width:0vw;
	}
	100% {
		width:20vw;
	}
}

@keyframes lmnt-nav-brand-in {
	0% {
		opacity:0;
	}
	100% {
		opacity:1;
	}
}

nav {
	.lmnt-nav-top {
		position:fixed;
		left:0;
		top:0;
		right:0;
		padding:$lmnt-top-nav-padding;
		z-index:500;
		.lmnt-inner {
			height:$lmnt-top-nav-height;
			display:flex;
			flex-direction:row;
			justify-content:stretch;
			align-items:center;
			font-size:14px;
			font-family:$fnt-body-alt;
			.lmnt-nav-left, .lmnt-nav-right {
				display:flex;
				flex-direction:row;
				align-items:center;
			}
			.lmnt-nav-left {
				justify-content:flex-start;
				flex:9;
			}
			.lmnt-nav-right {
				justify-content:flex-end;
				flex:2;
			}

			a, a:hover, a:active, a:visited, a:focus {
				color:$clr-main;
			}
			.lmnt-nav-branding {
				display:flex;
				flex-direction:row;
				justify-content:flex-start;
				align-items:center;
				padding-right:10px;
				.lmnt-branding {
					width:100%;
					opacity:0;
					max-width:30px;
					overflow:hidden;
					margin-right:5px;
					-webkit-animation: lmnt-nav-brand-in 3s 1;
				  -moz-animation:    lmnt-nav-brand-in 3s 1;
				  -o-animation:      lmnt-nav-brand-in 3s 1;
				  animation:         lmnt-nav-brand-in 3s 1;
					animation-delay: 0s;
					animation-fill-mode: forwards;
					svg {
						fill:$clr-main;
					}
				}
				.lmnt-nav-bar {
					width:20vw;
					height:9px;
					background-color:$clr-peach;
					-webkit-animation: lmnt-nav-bar-in 2.5s 1;
				  -moz-animation:    lmnt-nav-bar-in 2.5s 1;
				  -o-animation:      lmnt-nav-bar-in 2.5s 1;
				  animation:         lmnt-nav-bar-in 2.5s 1;
				}
			}
			dl {
				list-style-type:none;
				display:flex;
				flex-direction:row;
				counter-reset: lmnt-nav;
				dt {
					margin-right:$base/4;
					&:before {
						content: counter(lmnt-nav, decimal-leading-zero);
						counter-increment: lmnt-nav;
						font-family:$fnt-body;
						color:$clr-peach;
						font-size:14px;
					}
				}
			}
			.lmnt-nav-menu {
				display:flex;
				flex-direction:row;
				justify-content:flex-end;
				align-items:center;
				.lmnt-cart {
					display:flex;
					flex-direction:row;
					justify-content:flex-start;
					align-items:center;
					.lmnt-cart-total {
						color:$clr-white;
						background-color:$clr-peach;
						width:25px;
						height:25px;
						line-height:25px;
						text-align:center;
						border-radius:3px;
						margin-right:$base/2;
						font-family:$fnt-body;
						font-size:10px;
					}
					svg {
						stroke-width:1px;
						stroke:$clr-main;
						transition:all 1s ease;
						&:hover {
							stroke:$clr-peach;
						}
					}
				}
				.lmnt-hamburger {
					cursor:pointer;
					position:relative;
					width:45px;
					height:45px;
					margin:0 $base/4 0 $base/2;
					.lmnt-bar {
						height:2px;
						width:100%;
						background-color:$clr-main;
						position:absolute;
						&:first-child {
							top:15px;
							left:0px;
						}
						&:last-child {
							bottom:15px;
							left:0px;
						}
					}
				}
			}
		}
	}

	.lmnt-nav-uni {
		top:0;
		left:50px;
		position:fixed;
		transform-origin:left top;
		transform: rotate(90deg);
		.lmnt-inner {
			width:100vh;
			height:$lmnt-top-nav-height;
			color:$clr-main;
			font-family:$fnt-header;
			font-size:25px;
			display:flex;
			justify-content:space-between;
			flex-direction:row;
			align-items:center;
			padding:$base/4 $base/4 $base/4 ($lmnt-top-nav-height)+($lmnt-top-nav-padding);
		}
		.lmnt-nav-switch-list {
			list-style-type:none;
			display:flex;
