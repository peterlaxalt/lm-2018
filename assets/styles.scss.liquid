// animation.scss

body {
    -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
       -moz-animation: fadein 2s; /* Firefox < 16 */
        -ms-animation: fadein 2s; /* Internet Explorer */
         -o-animation: fadein 2s; /* Opera < 12.1 */
            animation: fadein 2s;
}

@keyframes tiltgradient {
  0% { background-position:0 0 }
  50% { background-position:100% 0 }
  100% { background-position:0 0 }
}

@mixin tiltgradient($duration) {
  -webkit-animation: tiltgradient $duration infinite;
  -moz-animation:    tiltgradient $duration infinite;
  -o-animation:      tiltgradient $duration infinite;
  animation:         tiltgradient $duration infinite;
}

@keyframes fadein {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@mixin fadein($duration) {
  -webkit-animation: fadein $duration 1;
  -moz-animation:    fadein $duration 1;
  -o-animation:      fadein $duration 1;
  animation:         fadein $duration 1;
}

.fadein {
  -webkit-animation: fadein .5s 1;
  -moz-animation:    fadein .5s 1;
  -o-animation:      fadein .5s 1;
  animation:         fadein .5s 1;
}

.fadein-1-sec {
  -webkit-animation: fadein 1s 1;
  -moz-animation:    fadein 1s 1;
  -o-animation:      fadein 1s 1;
  animation:         fadein 1s 1;
}

.fadein-1-5-sec {
  -webkit-animation: fadein 1.5s 1;
  -moz-animation:    fadein 1.5s 1;
  -o-animation:      fadein 1.5s 1;
  animation:         fadein 1.5s 1;
}

.fadein-2-sec {
  -webkit-animation: fadein 2s 1;
  -moz-animation:    fadein 2s 1;
  -o-animation:      fadein 2s 1;
  animation:         fadein 2s 1;
}

.fadein-2-5-sec {
  -webkit-animation: fadein 2.5s 1;
  -moz-animation:    fadein 2.5s 1;
  -o-animation:      fadein 2.5s 1;
  animation:         fadein 2.5s 1;
}

.fadein-3-sec {
  -webkit-animation: fadein 2.5s 1;
  -moz-animation:    fadein 2.5s 1;
  -o-animation:      fadein 2.5s 1;
  animation:         fadein 2.5s 1;
}

@keyframes fadeout {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

.fadeout {
  -webkit-animation: fadeout .5s 1;
  -moz-animation:    fadeout .5s 1;
  -o-animation:      fadeout .5s 1;
  animation:         fadeout .5s 1;
}

@keyframes grow {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;
  }
}

.grow {
  -webkit-animation: grow 1s ease 1;
  -moz-animation:    grow 1s ease 1;
  -o-animation:      grow 1s ease 1;
  animation:         grow 1s ease 1;
}

.blur {
  transform: translateY(100px);
  opacity:0;
  transition:1s all ease;
  // filter:blur(20px);
}

.unblur {
  transform: translateY(0px);
  opacity:1;
  // filter:blur(0px) !important;
}

.force-visible {
  opacity:1 !important;
}

// mixins.scss

// page theming individual portfolio items

@mixin page-theme($name,$theme-color-1,$theme-color-2,$head-bg:none,$bg-scroll:scroll) {
  .page-hero-#{$name} {
    min-height:$header-height;
    padding:$header-height/5 0;
    background-image:$head-bg;
    background-position:center center;
    background-size:cover;
    background-repeat:no-repeat;
    background-attachment:$bg-scroll;
    background-color:$theme-color-1;
    border:$content-spacing/2 solid $wrapper-bg;
    .page-header {
      padding:$indent 0 $indent $indent;
      span {
        font-family:$headerfont;
        font-size:$pagehero-size;
        line-height:$pagehero-size+2px;
        font-weight:normal;
        color:$theme-color-2;
        @extend .fadein-1-5-sec;
      }
      p {
        color:$theme-color-2;
      }
    }
    .page-hero-intro {
      padding:$indent 30% $indent $indent;
      margin-top:$sidenav-size/2;
      color:$theme-color-2;
      border-left:1px solid $theme-color-2;
    }
    .scope-list {
      color:$theme-color-2;
      ul {
        color:$theme-color-2;
        a[class^="button-small-"], a[class*=" button-small-"] {
          color:$theme-color-2;
        }
      }
      .intro-head {
        color:$theme-color-2;
      }
    }
  }
  .row-#{$name} {
    background-color:$theme-color-1;
    color:$theme-color-2;
    .content {
      background-color:$theme-color-1;
      color:$theme-color-2;
      .alt-head {
        color:$theme-color-2;
      }
    }
  }
}

