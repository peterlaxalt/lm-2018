//// +-+-animation

body {
    -webkit-animation: fadein 2s; /* Safari, Chrome and Opera > 12.1 */
       -moz-animation: fadein 2s; /* Firefox < 16 */
        -ms-animation: fadein 2s; /* Internet Explorer */
         -o-animation: fadein 2s; /* Opera < 12.1 */
            animation: fadein 2s;
}

@keyframes tiltgradient {
  0% { background-position:0 0 }
  50% { background-position:100% 0 }
  100% { background-position:0 0 }
}

@mixin tiltgradient($duration) {
  -webkit-animation: tiltgradient $duration infinite;
  -moz-animation:    tiltgradient $duration infinite;
  -o-animation:      tiltgradient $duration infinite;
  animation:         tiltgradient $duration infinite;
}

@keyframes fadein {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@mixin fadein($duration) {
  -webkit-animation: fadein $duration 1;
  -moz-animation:    fadein $duration 1;
  -o-animation:      fadein $duration 1;
  animation:         fadein $duration 1;
}

.lmnt-anim-fadein {
  -webkit-animation: fadein .5s 1;
  -moz-animation:    fadein .5s 1;
  -o-animation:      fadein .5s 1;
  animation:         fadein .5s 1;
}

.lmnt-anim-fadein-1 {
  -webkit-animation: fadein 1s 1;
  -moz-animation:    fadein 1s 1;
  -o-animation:      fadein 1s 1;
  animation:         fadein 1s 1;
}

.lmnt-anim-fadein-2 {
  -webkit-animation: fadein 2s 1;
  -moz-animation:    fadein 2s 1;
  -o-animation:      fadein 2s 1;
  animation:         fadein 2s 1;
}

.lmnt-anim-fadein-3 {
  -webkit-animation: fadein 3s 1;
  -moz-animation:    fadein 3s 1;
  -o-animation:      fadein 3s 1;
  animation:         fadein 3s 1;
}

.lmnt-anim-fadein-4 {
  -webkit-animation: fadein 4s 1;
  -moz-animation:    fadein 4s 1;
  -o-animation:      fadein 4s 1;
  animation:         fadein 4s 1;
}

.lmnt-anim-fadein-5 {
  -webkit-animation: fadein 5s 1;
  -moz-animation:    fadein 5s 1;
  -o-animation:      fadein 5s 1;
  animation:         fadein 5s 1;
}

@keyframes fadeout {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

.fadeout {
  -webkit-animation: fadeout .5s 1;
  -moz-animation:    fadeout .5s 1;
  -o-animation:      fadeout .5s 1;
  animation:         fadeout .5s 1;
}

@keyframes grow {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;
  }
}

.grow {
  -webkit-animation: grow 1s ease 1;
  -moz-animation:    grow 1s ease 1;
  -o-animation:      grow 1s ease 1;
  animation:         grow 1s ease 1;
}

.blur {
  transform: translateY(100px);
  opacity:0;
  transition:1s all ease;
  // filter:blur(20px);
}

.unblur {
  transform: translateY(0px);
  opacity:1;
  // filter:blur(0px) !important;
}

.force-visible {
  opacity:1 !important;
}

